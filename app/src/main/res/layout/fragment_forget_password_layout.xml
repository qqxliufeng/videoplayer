<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="@dimen/dp_10"
        android:text="重置密码"
        android:textColor="@color/blackTextColor"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="50dp"
        android:text="手机号"
        android:textColor="@color/grayTextColor2" />

    <EditText
        android:id="@+id/mEtForgetPasswordPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/blackTextColor"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:text="验证码"
        android:textColor="@color/grayTextColor2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <EditText
            android:id="@+id/mEtForgetPasswordCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvForgetPasswordCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_tv_6"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="5dp"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="5dp"
            android:text="获取验证码"
            android:textColor="@color/grayTextColor2" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:text="密码"
        android:textColor="@color/grayTextColor2" />

    <EditText
        android:id="@+id/mEtForgetPasswordPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColor="@color/blackTextColor"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/mTvLoginForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="登录账号"
        android:textColor="@color/blackTextColor" />

    <Button
        android:id="@+id/mBtForgetPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_bt_2"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="@dimen/sp_16" />

</LinearLayout>