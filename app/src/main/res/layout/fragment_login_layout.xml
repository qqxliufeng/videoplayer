<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="@dimen/dp_10"
        android:text="欢迎登录帐号"
        android:textColor="@color/blackTextColor"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="50dp"
        android:text="手机号"
        android:textColor="@color/grayTextColor2" />

    <EditText
        android:id="@+id/mEtLoginPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:text="13121394518"
        android:textColor="@color/blackTextColor"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:text="密码"
        android:textColor="@color/grayTextColor2" />

    <EditText
        android:id="@+id/mEtLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请输入密码"
        android:text="123456"
        android:inputType="textPassword"
        android:textColor="@color/blackTextColor"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/mTvLoginRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textColor="@color/blackTextColor" />

        <TextView
            android:id="@+id/mTvLoginForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:textColor="@color/blackTextColor" />
    </RelativeLayout>

    <Button
        android:id="@+id/mBtLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_bt_2"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="@dimen/sp_16" />

</LinearLayout>