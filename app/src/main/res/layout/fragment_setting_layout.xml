<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBgColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTvSettingResetPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:drawableRight="@drawable/img_right_icon"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:text="重置密码"
        android:textColor="@color/blackTextColor"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="清除缓存"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvSettingCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/img_right_icon"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="0M"
            android:textColor="@color/grayTextColor2"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="版本"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvSettingVersionName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/img_right_icon"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="1.0.0"
            android:textColor="@color/grayTextColor2"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="退出登录"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_16" />

</LinearLayout>