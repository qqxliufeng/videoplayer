<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical"
              android:padding="@dimen/dp_10">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/mIvSearchItemPic"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_glide_load_default"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10">

            <TextView
                    android:id="@+id/mTvSearchItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="中餐厅 第一季"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/sp_16"/>

            <TextView
                    android:id="@+id/mTvSearchItemDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mTvSearchItemTitle"
                    android:layout_marginTop="@dimen/dp_10"
                    tools:text="湖南卫视  综艺  内地"
                    android:textColor="@color/grayTextColor2"
                    android:textSize="@dimen/sp_14"/>

            <TextView
                    android:id="@+id/mTvSearchItemActor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mTvSearchItemDes"
                    android:layout_marginTop="@dimen/dp_10"
                    tools:text="赵薇 黄晓明 周冬雨 张亮"
                    android:textColor="@color/grayTextColor2"
                    android:textSize="@dimen/sp_14"/>

            <Button
                    android:id="@+id/mBtSearchItemPlay"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_bt_4"
                    android:text="立即播放"
                    android:textColor="#fff"/>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/mFlSearchItemCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            app:flexWrap="wrap">
    </com.google.android.flexbox.FlexboxLayout>

    <TextView
            android:id="@+id/mTvSearchItemCollectionSeeMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/red"
            android:text="查看更多"
            android:padding="@dimen/dp_10"
            android:gravity="center"/>
</LinearLayout>